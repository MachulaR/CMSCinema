{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-sm"></div>
        <div class="col-md-auto">
            <div class="login-box">
                <form id="login-form" action="{{ path('login') }}" method="POST">
                    <br />
                    <div>
                        <label>Login</label><br />
                        <input type="text" name="_username" placeholder="login" value="{{ last_username }}" required>
                    </div>
                    <div>
                        <label>Password</label><br />
                        <input type="password" name="_password" placeholder="password" required>
                    </div>
                    <input type="hidden" name="_target_path" value="/dashboard"/>
                    <input type="submit" id="login-button" value="Log In">
                </form>
            </div>
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey }}
                </div>
            {% endif %}
        </div>
        <div class="col-sm"></div>
    </div>


{% endblock %}